<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320px"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="200px">

                <TextView
                    android:id="@+id/bName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:fontFamily="@font/caractere_l1"
                    android:gravity="center_horizontal"
                    android:text="Magasin" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="20px">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_envi"
                            android:layout_width="wrap_content"
                            android:layout_height="37dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            app:srcCompat="@mipmap/img_environment_city_foreground" />

                        <ImageView
                            android:id="@+id/image_fluid"
                            android:layout_width="wrap_content"
                            android:layout_height="37dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            app:srcCompat="@mipmap/img_fluid_city_foreground" />

                        <ImageView
                            android:id="@+id/image_attract"
                            android:layout_width="wrap_content"
                            android:layout_height="37dp"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            app:srcCompat="@mipmap/img_impact_on_city_foreground" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/bEnvironmentalScore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="TextView" />

                        <TextView
                            android:id="@+id/bFluidityScore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="TextView" />

                        <TextView
                            android:id="@+id/bAttractivenessScore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="TextView" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_empty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/caractere_l1"
                            android:gravity="center_horizontal" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/image_maison"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_gravity="bottom"
                app:srcCompat="@drawable/maison" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>