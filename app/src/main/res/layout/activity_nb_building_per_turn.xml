<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeNbBuildingPerTurn">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/textView_indication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/caractere_l2"
                android:text="@string/helpNbBuildingPerTurn" />

            <EditText
                android:id="@+id/inputNbBuilding"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/button_style"
                android:fontFamily="@font/caractere_l2"
                android:gravity="center"
                android:inputType="number"
                android:text=""></EditText>

            <Button
                android:id="@+id/confirmNbBuilding"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Mettre Ã  jour"
                android:fontFamily="@font/caractere_l2"
                android:background="@drawable/button_style"
                android:onClick="confirmNbBuilding"/>
            <!--TODO : nb courant dans android:text-->
        </LinearLayout>



    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>