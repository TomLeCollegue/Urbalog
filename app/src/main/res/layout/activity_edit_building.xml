<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".EditBuildingActivity">

    <ScrollView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:textAlignment="center"
                android:layout_gravity="center"
                android:id="@+id/nameBuildingEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="name">
            </EditText>

            <EditText
                android:layout_marginTop="40dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:id="@+id/descriptionBuildingEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="description">
            </EditText>


            <TextView
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Couts : ">
            </TextView>

            <EditText
                android:inputType="number"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:id="@+id/politiqueBuildingEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="0">
            </EditText>

            <EditText
                android:inputType="number"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:id="@+id/socialBuildingEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="0">
            </EditText>

            <EditText
                android:inputType="number"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:id="@+id/economiqueBuildingEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="0">
            </EditText>



            <TextView
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Effets : ">
            </TextView>

            <EditText
                android:inputType="number"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:id="@+id/attractiviteBuildingEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="0">
            </EditText>

            <EditText
                android:inputType="number"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:id="@+id/fluiditeBuildingEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="0">
            </EditText>

            <EditText
                android:inputType="number"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:id="@+id/environnementalBuildingEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="0">
            </EditText>

            <EditText
                android:layout_marginTop="40dp"
                android:inputType="number"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:id="@+id/scoreLogistiqueBuildingEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="0">
            </EditText>

            <EditText
                android:layout_marginTop="40dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:id="@+id/explicationLogistiqueBuildingEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="description">
            </EditText>

            <Button
                android:id="@+id/ButtonBuildingEdit"
                android:text="Valider"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="validerBuildingEdit">
            </Button>



        </LinearLayout>

    </ScrollView>

</LinearLayout>