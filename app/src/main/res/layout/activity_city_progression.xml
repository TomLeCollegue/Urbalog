<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CityProgressionActivity"
    android:background="@color/lightPink">


    <LinearLayout
        android:id="@+id/fullScreenLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/recyclerListBuildingsInCityLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerListBuildingsInCity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="320px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="70px"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/caractere_l1" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/caractere_l1"
                        android:text="-9" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/caractere_l1"
                        android:text="-8" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/caractere_l1"
                        android:text="-7" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/caractere_l1"
                        android:text="-6" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/caractere_l1"
                        android:text="-5" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/caractere_l1"
                        android:text="-4" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/caractere_l1"
                        android:text="-3" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/caractere_l1"
                        android:text="-2" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/caractere_l1"
                        android:text="-1" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/caractere_l1"
                        android:text="0" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/caractere_l1"
                        android:text="1" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/caractere_l1"
                        android:text="2" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/caractere_l1"
                        android:text="3" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/caractere_l1"
                        android:text="4" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/caractere_l1"
                        android:text="5" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/caractere_l1"
                        android:text="6" />

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/caractere_l1"
                        android:text="7" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/caractere_l1"
                        android:text="8" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/route_image"
                    android:layout_width="wrap_content"
                    android:layout_height="300px"
                    android:layout_margin="20px"
                    app:srcCompat="@drawable/route" />

                <ImageView
                    android:id="@+id/camion2"
                    android:layout_width="160px"
                    android:layout_height="110px"
                    app:srcCompat="@drawable/camionfluid" />

                <ImageView
                    android:id="@+id/camion3"
                    android:layout_width="160px"
                    android:layout_height="110px"
                    android:layout_marginTop="100px"
                    app:srcCompat="@drawable/camionattract" />

                <ImageView
                    android:id="@+id/camion"
                    android:layout_width="160px"
                    android:layout_height="110px"
                    android:layout_marginTop="195px"
                    app:srcCompat="@drawable/camionenvi" />

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>