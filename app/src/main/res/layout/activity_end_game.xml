<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EndGameActivity"
    android:background="@color/lightPink">


    <LinearLayout
        android:id="@+id/fullScreenLayout_score"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/TitleLayout_score"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@color/mediumPink">


            <TextView
                android:id="@+id/title_TextView"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/caractere_l2"
                android:gravity="center"
                android:text="Partie Terminée" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/EndGameInfosLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/score_player_layoutv1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/PlayerScoreTitleLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.065"
                    android:background="#B4B4B4">

                    <TextView
                        android:id="@+id/PlayerScoreText"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:fontFamily="@font/caractere_l2"
                        android:gravity="center"
                        android:text="Écran des scores" />

                </FrameLayout>


                <LinearLayout
                    android:id="@+id/TotalScoreLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/city_score_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <FrameLayout
                            android:id="@+id/environment_score_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/environment_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                app:srcCompat="@mipmap/img_environment_city_foreground" />

                            <TextView
                                android:id="@+id/environment_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|bottom"
                                android:fontFamily="@font/caractere_l2"
                                android:text="test" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/fluidity_score_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/fluidity_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                app:srcCompat="@mipmap/img_fluid_city_foreground" />

                            <TextView
                                android:id="@+id/fluidity_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|bottom"
                                android:fontFamily="@font/caractere_l2"
                                android:text="test" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/attractivity_score_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/attractivity_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                app:srcCompat="@mipmap/img_impact_on_city_foreground" />

                            <TextView
                                android:id="@+id/attractivity_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|bottom"
                                android:fontFamily="@font/caractere_l2"
                                android:text="test" />
                        </FrameLayout>
                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/endgame_score_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/text_score_player"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/caractere_l2"
                            android:gravity="center"
                            android:text="Score : " />
                    </FrameLayout>
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/logisticButtonLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.75">

                    <Button
                        android:id="@+id/logisticButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/caractere_l2"
                        android:onClick="scoreLog"
                        android:text="ScoreLogistique de la ville" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/BuildingInfluenceLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/TitleBuildingInfluenceLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:background="@color/darkGray">

                    <TextView
                        android:id="@+id/TitleBuildingInfluence_TextView"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:fontFamily="@font/caractere_l2"
                        android:gravity="center"
                        android:text="Batiments construits au cours de la partie" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/RecyclerViewBuildingInfluenceLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="30dip"
                    android:paddingTop="25dip"
                    android:paddingRight="30dip"
                    android:paddingBottom="25dip">


                    <LinearLayout
                        android:id="@+id/caption_layout"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/buildingNameCaption"
                            style="@style/TextAppearance.AppCompat.Small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1.9"
                            android:gravity="center"
                            android:text="Nom" />

                        <TextView
                            android:id="@+id/caption_environment_score"
                            style="@style/TextAppearance.AppCompat.Small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="Env." />

                        <TextView
                            android:id="@+id/caption_fluidity_score"
                            style="@style/TextAppearance.AppCompat.Small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="Fluidité" />
                        <TextView
                            android:id="@+id/caption_attractivity_score"
                            style="@style/TextAppearance.AppCompat.Small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="Attractivité" />
                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/rv_frame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerListBuildingBuilt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>