<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.urbalog">
    <!-- Required for Nearby Connections -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="landscape"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LogisticActivity"
            android:screenOrientation="sensorLandscape">
        </activity>
        <activity
            android:name=".EditBuildingActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="sensorLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayerViewActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".AdminConnectionActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".PlayerConnexionActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".ListBuildingsActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".EndGameActivity"
            android:screenOrientation="landscape" />
    </application>

</manifest>